# Meta API Configuration
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here
META_ACCESS_TOKEN=your_long_lived_access_token_here
META_API_VERSION=v21.0

# Multi-Account Configuration (JSON format)
# Format: [{"country":"CountryName","label":"Account Label","account_id":"act_123456"}]
META_ACCOUNTS_CONFIG='[{"country":"KSA","label":"KSA Main Account","account_id":"act_123456789"},{"country":"Kuwait","label":"Kuwait Main Account","account_id":"act_987654321"},{"country":"Qatar","label":"Qatar Main Account","account_id":"act_456789123"}]'

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/meta_funnel_db

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Data Refresh Schedule (cron format)
# Default: Every hour at minute 0
DATA_REFRESH_CRON=0 * * * *

# Logging
LOG_LEVEL=info